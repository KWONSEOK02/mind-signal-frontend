{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@01-app/*": ["./src/01-app/*"],
      "@02-processes/*": ["./src/02-processes/*"],
      "@03-pages/*": ["./src/03-pages/*"],
      "@04-widgets/*": ["./src/04-widgets/*"],
      "@05-features/*": ["./src/05-features/*"],
      "@06-entities/*": ["./src/06-entities/*"],
      "@07-shared/*": ["./src/07-shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
